<section>
  <h2>Portal da Universidade</h2>
  <p>Bem-vindo ao laboratório vulnerável. Anúncios recentes:</p>
  <ul class="announcements">
    <% announcements.forEach(a => { %>
      <li>
        <h3><%= a.title %> — <small>por <%= a.author %></small></h3>
        <div class="html">
          <!-- XSS armazenado: conteúdo não escapa -->
          <%- a.body %>
        </div>
      </li>
    <% }) %>
  </ul>
</section>
